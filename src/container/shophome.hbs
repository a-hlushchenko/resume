<main class="px-5 py-2">
    <div class="row">

        {{#with navigation}}
        <header class="col-12 card p-2 mb-5">
            <div class="row">

                <h1 class="col-7">shop</h1>

                <nav class="nav col-4 pt-1">
                    {{#each links}}
                    {{>link href=href text=text blank=true noLine=true class='nav-item nav-link'}}
                    {{/each}}
                </nav>

                <div class='col-1 text-muted mt-3'>{{Logo}}</div>

            </div>
        </header>
        {{/with}}

        {{#with newsBlock}}
        <section class="col-12">
            <div class="row">

                <h2 class="text-center col-12 mb-4">{{title}}</h2>

                {{#each cards}}
                <div class="col-3">
                    <div class="card text-bg-dark p-3 mb-4">

                        <div class="card-header">
                            <strong>{{title}}</strong>

                            {{#if isTop}}
                            <span class="badge rounded-pill text-bg-danger ms-1">Топ</span>
                            {{/if}}

                            {{#if isNew}}
                            <span class="badge rounded-pill text-bg-success ms-1">Нова</span>
                            {{/if}}
                        </div>

                        <p>{{description}}</p>

                    </div>
                </div>
                {{/each}}

            </div>
        </section>
        {{/with}}

        <hr class="my-5">

        {{#with goodsBlock}}
        <section class='col-12'>

            <nav class="nav nav-tabs mb-5">
                {{#each tabs}}
                <div class="nav-item">
                    <a class='nav-link
                        {{#if isActive}} active{{/if}}
                        {{#if isDisabled}} disabled{{/if}}'>
                        {{text}}
                    </a>
                </div>
                {{/each}}
            </nav>

            <div class="row">
                {{#each cards}}
                <div class="col-4">
                    <div class="card mb-4">

                        <img src="{{image}}" alt="{{title}}">


                        <div class="card-body">
                            <strong>{{title}}

                                {{#if isHot}}
                                <span class="badge rounded-pill text-bg-warning text-light text-uppercase">Hot!</span>
                                {{/if}}

                                {{#if isNew}}
                                <span class="badge rounded-pill text-bg-primary text-light text-uppercase">Нове</span>
                                {{/if}}
                            </strong>
                            <p>{{description}}</p>
                        </div>

                    </div>
                </div>
                {{/each}}
            </div>

        </section>
        {{/with}}

        <hr class="my-5">

        {{#with subscribe}}
        <section class="col-12">
            <div class="row card text-bg-dark p-3">
                <div class="col-8">
                    <h2>{{header}}</h2>
                    <p>{{description}}</p>
                    <a class="btn btn-primary" href="{{buttons.[0].link}}">{{buttons.[0].text}}</a>
                </div>

                <a class="btn btn-primary col-3" href="{{buttons.[1].link}}">{{buttons.[1].text}}</a>
            </div>
        </section>
        {{/with}}

    </div>
</main>