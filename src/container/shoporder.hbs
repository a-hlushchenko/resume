<main>
    <div class="row">

        <div class="col-8">

            <h2 class="display-5 fw-semibold mb-5">{{header}}</h2>

            <section class="me-3">
                {{#with contacts_data}}

                <div class="col-12 mb-3">
                    <strong class="display-6 fw-semibold">{{title}}</strong>
                </div>

                {{#each buttons}}
                {{#if isPrimary}}<button class="btn btn-warning me-2">{{text}}</button>
                {{/if}}

                {{#if isOutline}}<button class="btn btn-outline-warning">{{text}}</button>
                {{/if}}
                {{/each}}


                {{#with form}}
                <form class="mt-3">
                    <div class="row g-3">
                        {{#each input}}
                        {{#with this}}

                        <div class="col-6">
                            <label class="form-label">{{label}}</label>
                            <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>

                        {{/with}}
                        {{/each}}
                    </div>
                </form>

                <hr class="my-5">

                {{#each switch}}
                <div class="form-check form-switch mb-3">
                    <label class="form-check-label">{{text}}</label>
                    {{#if isActive}}
                    <input checked type="checkbox" class="form-check-input">
                    {{else}}
                    <input type="checkbox" class="form-check-input">
                    {{/if}}
                </div>
                {{/each}}

                <hr class="my-5">

                {{/with}}

                {{/with}}

            </section>

            {{#with delivery}}
            <section>

                <div class="mb-3">
                    <strong class="display-6 fw-semibold">{{title}}</strong>
                </div>

                <div class="card card-body mb-3">
                    <div class="row">
                        {{#each select}}

                        <div class="col-6">
                            <label class="form-label">{{label}}</label>
                            <select placeholder="{{placeholder}}" class="form-select form-select-lg">

                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}

                            </select>
                        </div>

                        {{/each}}
                    </div>
                </div>

                {{#each delivery_type}}
                <div class="form-check">
                    <label class="form-check-label">{{type}}</label>
                    <input type="radio" class="form-check-input" name="radio">
                </div>
                {{/each}}

            </section>


            <hr class="my-5">

            {{#with payment}}
            <section>

                <strong class="display-6 fw-semibold">{{title}}</strong>

                {{#each list}}
                <div class="form-check mb-3 mt-3">
                    <label class="form-check-label">{{type}}</label>
                    <input type="radio" class="form-check-input" name="radio2">
                    {{#if description}}<div class="form-text">{{description}}</div>{{/if}}
                </div>
                {{/each}}

            </section>
            {{/with}}

            <hr class="my-5">

            {{#with contact}}
            <section class="col-12">
                <div class="row g-3">

                    <strong class="display-6 fw-semibold">{{title}}</strong>

                    {{#each this}}
                    {{#unless @first}}
                    <div class="col-6">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                    </div>
                    {{/unless}}
                    {{/each}}

                </div>
            </section>
            {{/with}}

            <hr class="my-5">

            {{#with coment}}
            <section>
                <label class="form-label">{{label}}</label>
                <input class="form-control form-control-lg" placeholder="{{placeholder}}">
            </section>
            {{/with}}

            {{/with}}

            <hr class="my-5">

            {{#with coupon}}
            <section>

                <div class="col-12 mb-3">
                    <strong class="display-6 fw-semibold">{{title}}</strong>
                </div>

                {{#each select}}

                <label class="form-label">{{label}}</label>
                <select placeholder="{{placeholder}}"
                    class="mb-3 form-select form-select-{{#if @last}}sm{{else}}lg{{/if}}">

                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}

                </select>

                {{/each}}

                {{#each add}}
                <label class="form-label">{{label}}</label>
                <input class="form-control form-control-{{#if @last}}sm{{else}}lg{{/if}}" placeholder="{{placeholder}}">
                <div class="form-text mb-3">{{caption}}</div>
                {{/each}}

            </section>
            {{/with}}

            <hr class="my-5">

            {{#with quiz}}
            <section>

                <div class="col-12 mb-5">
                    <strong class="display-6 fw-semibold">{{title}}</strong>
                </div>

                {{#with preference}}
                <label class="mb-2 ms-2 form-label">{{title}}</label>

                {{#each options}}
                <div class="form-check mb-3">
                    <label class="form-check-label">{{this}}</label>
                    <input type="radio" class="form-check-input" name="radio3">
                </div>
                {{/each}}

                {{/with}}

                {{#with your_expirience}}
                <label class="form-label mt-2">{{label}}</label>
                <input class="form-control form-control-lg mb-3">
                {{/with}}

                {{#with purchase_frequency}}
                <label class="form-label">{{label}}</label>
                <select placeholder="{{placeholder}}" class="form-select form-select-lg mb-3">

                    {{#each options}}
                    <option class="mb-2" value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}

                {{#with factors}}

                <label class="form-label">{{title}}</label>

                {{#each options}}
                <div class="form-check">
                    <label class="form-check-label">{{this}}</label>
                    <input type="checkbox" class="form-check-input">
                </div>
                {{/each}}

                {{/with}}

            </section>
            {{/with}}

        </div>

        <aside class='col-3 ms-5'>
            <div class="row">
                <div class="col-9 p-0">
                    <div class="card card-body mb-3">
                        {{#each action_block}}

                        {{#if isSuccess}}
                        <button class="btn btn-success mb-2">{{text}}</button>
                        {{/if}}

                        {{#if isDanger}}
                        <button class="btn btn-danger mb-2">{{text}}</button>
                        {{/if}}

                        {{#if isInfo}}
                        <button class="btn btn-info">{{text}}</button>
                        {{/if}}

                        {{/each}}
                    </div>
                </div>

                {{#with total}}
                <div class="card card-body">
                    <strong class='display-6 fw-semibold mb-2'>{{title}}</strong>

                    {{#each item_list}}
                    <div>{{name}}: {{price}}</div>
                    {{/each}}

                    <hr>

                    {{#each additional_info}}
                    <div>{{text}}: {{value}}</div>
                    {{/each}}

                    <hr>

                    {{#with total_price}}
                    <div>{{text}}: {{value}}</div>
                    {{/with}}

                    <hr>

                    {{#each button}}

                    {{#if isPrimary}}
                    <button class="btn btn-primary mb-2 col-8">{{text}}</button>
                    {{/if}}

                    {{#if isOutline}}
                    <button class="btn btn-outline-primary mb-2 col-6">{{text}}</button>
                    {{/if}}

                    {{/each}}

                </div>
                {{/with}}

            </div>
        </aside>

    </div>
</main>