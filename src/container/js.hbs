<div>
    <main>
        <section>

            <h2 class="mb-3">{{> text color='warning' name=name noLine=true}}</h2>

            {{>text color='info' name='description' data=description}}

            <div class="mb-3">
                {{#with history}}

                {{>text color='secondary' name='year' data=year}}

                {{>text color='success' name='founder' data=founder}}

                {{/with}}
            </div>

            <div class="mb-3">
                <details>
                    <summary>{{>text color='dark' name='types' noLine=true noDiv=true}}</summary>
                    <ul>
                        {{#each types}}
                        <li>
                            <div>
                                {{this}}
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </details>
            </div>

            <div>
                {{#with syntax}}

                <div class="mb-2">{{>text color='danger' name='syntax' noDiv=true}}
                    {{#each variables}}
                    {{this}},
                    {{/each}}
                </div>

                <div class="mb-2">{{>text color='danger' name='functions' noDiv=true}}
                    {{#each functions}}
                    {{this}},
                    {{/each}}
                </div>

                <div class="mb-2">{{>text color='danger' name='conditionals' noDiv=true}}
                    {{#each conditionals}}
                    {{this}},
                    {{/each}}
                </div>

                <div class="mb-2">{{>text color='danger' name='loops' noDiv=true}}
                    {{#each loops}}
                    {{this}},
                    {{/each}}
                </div>

                <div class="mb-3">{{>text color='danger' name='classes' noDiv=true}}
                    {{#each classes}}
                    {{this}},
                    {{/each}}
                </div>

                {{/with}}
            </div>

            <div class="mb-2">
                <details>
                    <summary>{{>text color='dark' name='features' noLine=true noDiv=true}}</summary>

                    <ul>
                        {{#each features}}
                        <li{{#if @first}} class='mt-2' {{/if}}>
                            <div>
                                {{this}}
                            </div>
                            </li>
                            {{/each}}
                    </ul>
                </details>
            </div>

            <div class="mb-2">
                <details>
                    <summary>{{>text color='dark' name='libraries' noLine=true noDiv=true}}</summary>

                    <ul>
                        {{#each libraries}}
                        <li{{#if @first}} class='mt-2' {{/if}}>
                            <div>
                                {{this}}
                            </div>
                            </li>
                            {{/each}}
                    </ul>
                </details>
            </div>

            <div class="mb-3">
                <details>
                    <summary>{{>text color='dark' name='tools' noLine=true noDiv=true}}</summary>

                    <ul>
                        {{#each tools}}
                        <li{{#if @first}} class='mt-2' {{/if}}>
                            <div>
                                {{this}}
                            </div>
                            </li>
                            {{/each}}
                    </ul>
                </details>
            </div>


            <div>
                {{>text color='info' noLine=true name='community'}}
                <ul>
                    {{#each community}}
                    <li class="mb-3{{#if @first}} mt-3{{/if}}">
                        {{>text color='primary' name='name' data=name}}
                        {{>text color='primary' name='type' data=type}}
                    </li>

                    {{/each}}
                </ul>
            </div>

        </section>
    </main>
</div>