<div class="row">
    {{#each cards}}
    <div class="col-4">
        <div class="card mb-4">

            <img src="{{image}}" alt="{{title}}">


            <div class="card-body">
                <strong>{{title}}

                    {{#if isHot}}
                    <span class="badge rounded-pill text-bg-warning text-light text-uppercase">Hot!</span>
                    {{/if}}

                    {{#if isNew}}
                    <span class="badge rounded-pill text-bg-primary text-light text-uppercase">Нове</span>
                    {{/if}}
                </strong>
                <p>{{description}}</p>
            </div>

        </div>
    </div>
    {{/each}}
</div>