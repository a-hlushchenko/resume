<section>
    {{#each reviewList}}
    <div class="card card-body mb-5 p-4">
        <div class="card card-body p-0 mb-4">

            {{#with title}}
            <div class="card-header bg-white">
                <div>{{userName}}</div>
                <div>{{caption}}</div>
                <div>{{date}}</div>
            </div>
            {{/with}}

            {{#with reviewBody}}
            <div class="card-body">

                <div class='mb-3'>{{seller.title}}: {{seller.value}}</div>

                <div class='mb-3'>{{rating.title}}: {{rating.value}}</div>

                {{#each text}}
                <p>{{this}}</p>
                {{/each}}

                <div class='mb-3'>
                    <b>{{advantages.title}}</b>:
                    <div>{{advantages.text}}</div>
                </div>

                <div class='mb-3'>
                    <b>{{disadvantages.title}}</b>:
                    <div>{{disadvantages.text}}</div>
                </div>

                {{#each images}}
                <img src="{{this}}" alt="picture" class="me-2">
                {{/each}}

            </div>

        </div>

        {{#each coments}}
        <div class="card card-body ms-5 mb-3">
            <b>{{userName}}</b>
            <div>{{date}}</div>
            <p>{{text}}</p>
        </div>
        {{/each}}

        {{/with}}
    </div>
    {{/each}}
</section>