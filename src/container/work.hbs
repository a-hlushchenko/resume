<div>
    {{#with main}}
    <main>

        <section>

            {{>title big=true data='Work history'}}

            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div class="mb-2">{{position}}</div>


                        <div class="mb-2">
                            {{#unless company.url}}
                            <b>{{company.name}}</b>
                            {{else}}
                            {{> link blank=true href=company.url text=company.name noLine=true}}
                            {{/unless}}
                        </div>

                        <em>
                            {{duration.from}} -

                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (зараз працюю)
                            {{/if}}
                        </em>

                        <div class="mt-3"><strong>Projects ({{projectAmount}})</strong></div>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div class="mb-2">{{> link blank=true href=url text=name noLine=true}}</div>

                                <div class="mb-3">
                                    {{about}}
                                </div>

                                <div>
                                    <em>Project stacks ({{stackAmount}})</em>
                                </div>

                                {{#each stacks}}
                                <div>
                                    <ul>
                                        <li>
                                            {{name}}
                                        </li>
                                    </ul>
                                </div>
                                {{/each}}

                                <div class="mt-3">
                                    <em>Project rewards</em>
                                </div>

                                {{#each awards}}
                                <div>
                                    <ul>
                                        <li>
                                            {{name}}
                                        </li>
                                    </ul>
                                </div>
                                {{/each}}

                            </li>

                            {{/each}}
                        </ul>

                    </li>

                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>