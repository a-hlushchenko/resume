<div class="card card-body flex-row mt-5">

    <img width="110px" src="{{image}}" alt="{{name}}" class="col-1">

    <div class="col-5 mx-5">
        <strong class="fs-4">{{name}}</strong>
        <p class="mt-3">{{description}}</p>
    </div>

    <div class="col-2 mt-3">
        <div class="mb-3">{{price.title}}: </div>
        <div class="fs-5 fw-semibold">{{price.value}}</div>
    </div>

    <div class="col-2 mt-5">{{amount}}</div>

    <div class="mt-2">
        {{#each buttons}}
        {{#if isPrimary}}<button class="btn btn-primary mb-3">{{text}}</button>{{/if}}
        {{#if isDanger}}<button class="btn btn-outline-danger">{{text}}</button>{{/if}}
        {{/each}}
    </div>

</div>